#:kivy 2.0.0 

<CompressorLayout>:
    name:name
    pizza:pizza


    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2

            Label:
                text: "Name"
            TextInput: 
                id:name
                multiline:False
            
            Label:
                text: "Fav Pizza"
            TextInput:
                id:pizza 
                multiline:False
        
        Button:
            text: "Submit"
            font_size:64
            on_press: root.press()